<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.price">
            <block class="Thao\HidePrice\Block\View\Contact" name="custom.hide.price" template="Thao_HidePrice::catalog/product/view/contact_us.phtml"/>
        </referenceContainer>
        <referenceBlock name="product.info" template="Thao_HidePrice::catalog/product/view/form.phtml"></referenceBlock>
        <referenceBlock class="Magento\Catalog\Block\Product\ProductList\Related" name="catalog.product.related"
                        template="Thao_HidePrice::catalog/product/list/items.phtml"/>
        <referenceBlock class="Magento\Catalog\Block\Product\ProductList\Upsell" name="product.info.upsell"
                        template="Thao_HidePrice::catalog/product/list/items.phtml"/>
    </body>
</page>
