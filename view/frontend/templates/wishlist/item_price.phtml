<?php
/** @var \Thao\HidePrice\Block\Wishlist\HidePrice $block */
$wishlistItem = $block->getWishlistItem(); // Lấy wishlist item từ block
$product = $wishlistItem ? $wishlistItem->getProduct() : null; // Lấy sản phẩm từ wishlist item
?>

<div class="wishlist-item">
    <h3><?= $product ? $product->getName() : '' ?></h3>

    <?php if ($product && $block->isHidePrice($product)): ?>
        <span class="hide-price"><?= __('Contact Us for Price') ?></span>
    <?php else: ?>
        <div class="product-price"><?= $block->getProductPrice($product) ?></div>
    <?php endif; ?>
